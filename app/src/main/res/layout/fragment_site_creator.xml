<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="activityViewModel" type="com.dev.orangebrowser.bloc.host.MainViewModel"/>
        <variable name="fragment" type="com.dev.orangebrowser.bloc.found.creator.SiteCreatorFragment"/>
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
                                                         android:fitsSystemWindows="true"
                                                         android:id="@+id/container_wrapper"
                                                         bgColor="@{activityViewModel.theme.colorPrimary}"
                                                         android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:background="@color/colorWhite"
                android:layout_height="match_parent">
            <FrameLayout android:id="@+id/header" android:layout_width="0dp" android:layout_height="44dp"
                         bgColor="@{activityViewModel.theme.colorPrimary}"
                         app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintEnd_toEndOf="parent">
                <com.dev.view.IconfontTextView
                        android:id="@+id/go_back"
                        android:layout_width="42dp"
                        android:layout_height="38dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:text="@string/ic_arrow_left"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> fragment.onBackPressed()}"
                        android:gravity="center"
                        android:layout_gravity="start|center_vertical"/>
                <TextView tools:text="资讯"
                          android:id="@+id/title"
                          android:gravity="center"
                          android:textSize="18sp"
                          android:textColor="@color/colorWhite"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"/>
                <com.dev.view.IconfontTextView
                        android:id="@+id/ok"
                        android:layout_width="42dp"
                        android:layout_height="38dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:text="@string/ic_check"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> fragment.save()}"
                        android:gravity="center"
                        android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <LinearLayout
                    android:id="@+id/title_wrapper"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/header"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="46dp"
                    android:background="@drawable/bg_white_corner_2dp"
                    android:layout_width="0dp"
                    android:layout_height="36dp">
                <com.dev.view.IconfontTextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:textColor="@{activityViewModel.theme.colorPrimary}"
                        android:textSize="16sp"
                        android:text="@string/ic_internet"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:layout_gravity="start|center_vertical"/>
                <EditText android:layout_width="0dp"
                          android:id="@+id/url"
                          tools:text="https://www.baidu.com"
                          android:textColor="@color/color_6C6C6C"
                          android:background="@null"
                          android:textSize="13sp"
                          android:singleLine="true"
                          android:inputType="text"
                          android:hint="@string/web_address"
                          android:textColorHint="@color/color_AFAFAF"
                          android:ellipsize="end"
                          android:paddingEnd="8dp"
                          android:paddingStart="0dp"
                          android:gravity="start|center_vertical"
                          android:layout_height="match_parent"
                          android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/style_wrapper"
                          android:orientation="horizontal"
                          android:layout_marginTop="36dp"
                          app:layout_constraintStart_toStartOf="parent"
                          app:layout_constraintEnd_toEndOf="parent"
                          app:layout_constraintTop_toBottomOf="@+id/title_wrapper"
                          android:layout_width="0dp"
                          android:layout_height="128dp">
                <com.dev.view.IconfontTextView
                        android:id="@+id/previous"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{()->fragment.previousTheme()}"
                        android:layout_width="72dp"
                        android:layout_height="120dp"
                        android:textColor="@{activityViewModel.theme.colorPrimary}"
                        android:textSize="12sp"
                        android:text="@string/ic_left"
                        android:gravity="center"
                        android:layout_gravity="start|center_vertical"/>
                <androidx.constraintlayout.widget.ConstraintLayout 
                        android:id="@+id/style_container"
                        android:layout_width="0dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                     <EditText
                             android:id="@+id/site_title"
                             tools:text="爱辣妹儿"
                             android:hint="@string/title"
                             android:background="@color/transparent"
                             android:inputType="text"
                             app:layout_constraintTop_toTopOf="parent"
                             app:layout_constraintStart_toStartOf="parent"
                             app:layout_constraintEnd_toEndOf="parent"
                             android:layout_marginStart="20dp"
                             android:layout_marginEnd="20dp"
                             android:layout_marginTop="28dp"
                             android:textStyle="bold"
                             android:textSize="36sp"
                             android:gravity="center"
                             android:layout_width="0dp"
                             android:layout_height="48dp"/>
                    <EditText android:id="@+id/site_sub_title"
                              tools:text="ihotmm.com"
                              android:background="@color/transparent"
                              android:layout_marginStart="20dp"
                              android:layout_marginEnd="20dp"
                              android:inputType="text"
                              android:hint="@string/sub_title"
                              android:layout_marginTop="4dp"
                              app:layout_constraintTop_toBottomOf="@id/site_title"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"
                              android:gravity="center"
                              android:textSize="15sp"
                              android:layout_width="0dp"
                              android:layout_height="20dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.dev.view.IconfontTextView
                        android:id="@+id/next"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{()->fragment.nextTheme()}"
                        android:layout_width="72dp"
                        android:layout_height="120dp"
                        android:textColor="@{activityViewModel.theme.colorPrimary}"
                        android:textSize="12sp"
                        android:text="@string/ic_right"
                        android:gravity="center"
                        android:layout_gravity="start|center_vertical"/>
            </LinearLayout>
            <EditText android:layout_width="120dp"
                      app:layout_constraintTop_toBottomOf="@id/style_wrapper"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginTop="10dp"
                      android:id="@+id/site_name"
                      tools:text="我爱妹妹吧"
                      android:textColor="@color/color_6C6C6C"
                      android:background="@null"
                      android:textSize="13sp"
                      android:singleLine="true"
                      android:inputType="text"
                      android:hint="@string/site_name"
                      android:textColorHint="@color/color_AFAFAF"
                      android:ellipsize="end"
                      android:paddingEnd="8dp"
                      android:paddingStart="8dp"
                      android:gravity="center"
                      android:layout_height="36dp"/>
            <TextView android:id="@+id/random_theme"
                      android:clickable="true"
                      android:focusable="true"
                      android:onClick="@{()->fragment.randomTheme()}"
                      app:layout_constraintTop_toBottomOf="@+id/site_name"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginTop="36dp"
                      android:textSize="11sp"
                      android:textColor="@color/color_6C6C6C"
                      android:gravity="center"
                      android:background="@drawable/bg_transparent_round_corner"
                      android:text="@string/random_theme"
                      android:layout_width="80dp"
                      android:layout_height="24dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>