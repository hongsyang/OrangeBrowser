<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/add_folder_container"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_white_corner_2dp"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/font_size_title"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:gravity="start|center_vertical"
                  android:text="@string/font_size"
                  android:textSize="13sp"
                  android:textStyle="bold"
                  android:textColor="@color/color_7A7A7A"
                  android:layout_marginStart="14dp"
                  android:layout_marginTop="14dp"
                  android:layout_marginEnd="14dp"
                  android:layout_width="0dp"
                  android:layout_height="40dp"/>
        <LinearLayout android:id="@+id/font_size_container" app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/font_size_title"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginStart="14dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginEnd="14dp"
                      android:orientation="horizontal" android:layout_width="0dp" android:layout_height="44dp">
            <TextView android:id="@+id/font_size_small"
                      android:clickable="true"
                      android:focusable="true"
                      android:gravity="center"
                      android:text="A"
                      android:textSize="16sp"
                      android:textStyle="bold"
                      android:textColor="@color/color_7A7A7A"
                      android:layout_width="80dp"
                      android:layout_height="match_parent"/>
            <TextView android:id="@+id/font_size_medium"
                      android:clickable="true"
                      android:focusable="true"
                      android:gravity="center"
                      android:text="A"
                      android:textSize="18sp"
                      android:textStyle="bold"
                      android:textColor="@color/color_7A7A7A"
                      android:layout_width="80dp"
                      android:layout_height="match_parent"/>
            <TextView android:id="@+id/font_size_large"
                      android:clickable="true"
                      android:focusable="true"
                      android:gravity="center"
                      android:text="A"
                      android:textSize="20sp"
                      android:textStyle="bold"
                      android:textColor="@color/color_7A7A7A"
                      android:layout_width="80dp"
                      android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView android:id="@+id/style_title"
                  app:layout_constraintTop_toBottomOf="@+id/font_size_container"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:gravity="start|center_vertical"
                  android:text="@string/font_size"
                  android:textSize="13sp"
                  android:textStyle="bold"
                  android:textColor="@color/color_7A7A7A"
                  android:layout_marginStart="14dp"
                  android:layout_marginTop="14dp"
                  android:layout_marginEnd="14dp"
                  android:layout_width="0dp"
                  android:layout_height="40dp"/>
        <LinearLayout app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/style_title"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginStart="14dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginEnd="14dp"
                      android:orientation="horizontal" android:layout_width="0dp" android:layout_height="44dp">
            <TextView android:id="@+id/style_white"
                      android:clickable="true"
                      android:focusable="true"
                      android:gravity="center"
                      android:text="@string/color_white"
                      android:textSize="16sp"
                      android:textStyle="bold"
                      android:textColor="@color/color_7A7A7A"
                      android:layout_width="80dp"
                      android:layout_height="match_parent"/>
            <TextView android:id="@+id/style_mo"
                      android:clickable="true"
                      android:focusable="true"
                      android:gravity="center"
                      android:text="@string/color_mo"
                      android:textSize="18sp"
                      android:textStyle="bold"
                      android:textColor="@color/color_7A7A7A"
                      android:layout_width="80dp"
                      android:layout_height="match_parent"/>
            <TextView android:id="@+id/style_grey"
                      android:clickable="true"
                      android:focusable="true"
                      android:gravity="center"
                      android:text="@string/color_grey"
                      android:textSize="20sp"
                      android:textStyle="bold"
                      android:textColor="@color/color_7A7A7A"
                      android:layout_width="80dp"
                      android:layout_height="match_parent"/>
            <TextView android:id="@+id/style_black"
                      android:clickable="true"
                      android:focusable="true"
                      android:gravity="center"
                      android:text="@string/color_black"
                      android:textSize="20sp"
                      android:textStyle="bold"
                      android:textColor="@color/color_7A7A7A"
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>