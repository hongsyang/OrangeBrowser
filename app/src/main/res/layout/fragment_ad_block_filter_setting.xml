<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="activityViewModel" type="com.dev.orangebrowser.bloc.host.MainViewModel"/>
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
                                                         android:fitsSystemWindows="true"
                                                         android:id="@+id/container_wrapper"
                                                         android:background="@{activityViewModel.theme.colorPrimary}"
                                                         android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <FrameLayout android:id="@+id/header" android:layout_width="0dp"  android:layout_height="44dp"
                         android:background="@{activityViewModel.theme.colorPrimary}"
                         app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintEnd_toEndOf="parent">
                <com.dev.view.IconfontTextView
                        android:id="@+id/go_back"
                        android:layout_width="42dp"
                        android:layout_height="38dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:text="@string/ic_arrow_left"
                        android:gravity="center"
                        android:layout_gravity="start|center_vertical"/>
                <TextView android:text="@string/ad_block_custom_filter"
                          android:gravity="center"
                          android:textSize="18sp"
                          android:textColor="@color/colorWhite"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"/>
                <com.dev.view.IconfontTextView
                        android:id="@+id/add"
                        android:layout_width="42dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_height="38dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:text="@string/ic_circle_plus"
                        android:gravity="center"
                        android:layout_gravity="end|center_vertical"/>
            </FrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:background="@color/color_F8F8F8"
                    app:layout_constraintTop_toBottomOf="@+id/header"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:overScrollMode="never"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
            <FrameLayout android:id="@+id/bottom_overlay"
                         app:layout_constraintTop_toTopOf="parent"
                         app:layout_constraintBottom_toBottomOf="parent"
                         app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintEnd_toEndOf="parent"
                         android:clickable="true"
                         android:focusable="true"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/add_filter_container"
                        android:layout_gravity="bottom"
                        android:background="@drawable/bg_white_corner_2dp"
                        android:layout_margin="8dp"
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView android:id="@+id/add_filter_title"
                              app:layout_constraintTop_toTopOf="parent"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"
                              android:gravity="center"
                              android:text="@string/add_subscription"
                              android:textSize="15sp"
                              android:textStyle="bold"
                              android:textColor="@color/color_6C6C6C"
                              android:layout_width="match_parent"
                              android:layout_height="40dp"/>
                    <EditText app:layout_constraintTop_toBottomOf="@id/add_filter_title"
                              android:background="@drawable/bg_white_corner_2dp"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintEnd_toEndOf="parent"
                              android:textSize="13sp"
                              android:ellipsize="end"
                              android:textColor="@color/color_6C6C6C"
                              android:textStyle="normal"
                              android:hint="@string/tip_add_filter"
                              android:textColorHint="@color/color_CCCCCC"
                              android:id="@+id/add_filter_text"
                              android:layout_width="0dp"
                              android:gravity="top"
                              android:padding="8dp"
                              android:layout_height="90dp"
                              android:layout_marginEnd="24dp"
                              android:layout_marginTop="14dp"
                              android:layout_marginStart="24dp"/>
                    <TextView
                            android:id="@+id/cancel_add_filter_btn"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/add_filter_text"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginTop="14dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/color_6C6C6C"
                            android:text="@string/cancel"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_width="80dp"
                            android:layout_height="26dp"/>
                    <TextView
                            android:id="@+id/add_filter_btn"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/add_filter_text"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/add_new"
                            android:layout_marginTop="14dp"
                            android:layout_marginEnd="24dp"
                            android:layout_marginBottom="12dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_width="80dp"
                            android:layout_height="26dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>